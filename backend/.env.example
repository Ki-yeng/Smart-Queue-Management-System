# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# MongoDB Configuration
# ============================================

# Local MongoDB
# MONGO_URI=mongodb://localhost:27017/kcau-queue

# MongoDB Atlas (Cloud)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/kcau-queue?retryWrites=true&w=majority

# ============================================
# JWT Configuration
# ============================================

# Generate strong secrets:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Secret key for access tokens (15 minute expiry)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Secret key for refresh tokens (7 day expiry)
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# ============================================
# Server Configuration
# ============================================

# Server port
PORT=5000

# Server environment
NODE_ENV=development

# ============================================
# Security (Optional, adjust as needed)
# ============================================

# CORS origins (comma-separated for multiple)
# CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging (Optional)
# ============================================

# Log level: error, warn, info, debug
# LOG_LEVEL=info

# ============================================
# Email Configuration (Optional, for future use)
# ============================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ============================================
# File Upload Configuration (Optional)
# ============================================

# Max file upload size
# MAX_FILE_SIZE=5242880  # 5MB in bytes

# Allowed file types
# ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# ============================================
# Important Notes
# ============================================

# 1. NEVER commit .env files to version control
# 2. Always use strong, unique values in production
# 3. Store secrets securely (use environment variables, vaults, etc.)
# 4. Rotate JWT secrets periodically
# 5. Use HTTPS in production
# 6. Enable IP whitelisting for MongoDB Atlas
# 7. Use strong database credentials
# 8. Enable encryption at rest for sensitive data
